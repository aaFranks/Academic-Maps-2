<form action="/mapsdb-api/v1/<%= method %>" method="post" class="form event-form">
  <label for="evt-name">Nome do evento</label>
  <input type="text" name="evt-name" id="evt-name">

  <label for="start-date">Data de início</label>
  <input type="date" name="start-date" id="start-date">

  <label for="end-date">Data de término</label>
  <input type="date" name="end-date" id="end-date">

  <label for="evt-desc">Descrição</label>
  <input type="textarea" name="evt-desc" id="evt-desc">

  <button type="submit" class="submit-btn">
    <% if (method === 'create') { %>
    Criar evento
    <% } else { %>
    Atualizar evento
    <% } %>
  </button>
</form>
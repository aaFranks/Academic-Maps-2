<%- include('includes/head') %>
<title>Academic Maps</title>
</head>

<body>

  <section class="container">
    <%- include('includes/nav') %>
    <%- include('includes/dark-mode-btn') %>
    <form action="/mapsdb-api/v1/<%= method %>" method="post" class="form event-form">

      <label for="title">Nome do evento</label>
      <input type="text" name="title" id="title">

      <label for="start-date">Data de início</label>
      <input type="date" name="startDate" id="start-date">

      <label for="end-date">Data de término</label>
      <input type="date" name="endingDate" id="end-date">

      <label for="evt-desc">Descrição</label>
      <input type="textarea" name="description" id="evt-desc">

      <input type="hidden" name="positionLat" value="<%= pos.lat %>">
      <input type="hidden" name="positionLng" value="<%= pos.lng %>">

      <button type="submit" class="submit-btn">
        <% if (method === 'create') { %>
        Criar evento
        <% } else { %>
        Atualizar evento
        <% } %>
      </button>
    </form>
  </section>
  <%- include('includes/footer') %>
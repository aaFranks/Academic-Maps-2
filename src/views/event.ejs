<%- include('includes/head') %>
<title>Academic Maps</title>
</head>

<body>

  <section class="container">
    <%- include('includes/nav') %>
    <%- include('includes/dark-mode-btn') %>
    <form action="/mapsdb-api/v1/<%= method %><% if(event._id) { %>/<%= event._id%><% } %>" method="post" class="form event-form">

      <% if(method === 'update') { %>
      <h1 class="form-title">Editar Evento</h1>

      <label for="title">Nome do evento</label>
      <input type="text" name="title" id="title" class="underlay" value="<%= event.title %>">
      <label for="start-date">Data de início</label>
      <input type="date" name="startDate" id="start-date" class="underlay" value="<%= event.startDate %>">
      <label for="end-date">Data de término</label>
      <input type="date" name="endingDate" id="end-date" class="underlay" value="<%= event.endingDate %>">
      <label for="evt-desc">Descrição</label>
      <input type="textarea" name="description" id="evt-desc" class="underlay" value="<%= event.description %>">
      <% } else { %>
      <h1 class="form-title">Criar Evento</h1>

      <label for="title">Nome do evento</label>
      <input type="text" name="title" id="title" class="underlay">
      <label for="start-date">Data de início</label>
      <input type="date" name="startDate" id="start-date" class="underlay">
      <label for="end-date">Data de término</label>
      <input type="date" name="endingDate" id="end-date" class="underlay">
      <label for="evt-desc">Descrição</label>
      <input type="textarea" name="description" id="evt-desc" class="underlay">
      <% } %>

      <input type="hidden" name="positionLat" value="<%= event.positionLat %>">
      <input type="hidden" name="positionLng" value="<%= event.positionLng %>">

      <button type="submit" class="btn submit-btn">
        <% if (method === 'create') { %>
        Criar evento
        <% } else { %>
        Atualizar evento
        <% } %>
      </button>
    </form>
  </section>
  <%- include('includes/footer') %>